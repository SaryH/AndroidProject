<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminMenu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Menu"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="32sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/LoggedInAs_Admin"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_logout_admin"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="Log Out" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_create_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Course" />

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_edit_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit or Remove a Course" />

            <FrameLayout
                android:id="@+id/fragment_container2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_course_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Course Available" />

            <FrameLayout
                android:id="@+id/fragment_container3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_view_students_of_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Students of Specific course" />

            <FrameLayout
                android:id="@+id/fragment_container_view_students_of_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/button_accept_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="review Applications for courses" />

            <FrameLayout
                android:id="@+id/fragment_container_review_applications"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_view_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View user profiles" />

            <FrameLayout
                android:id="@+id/fragment_container_view_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_previous_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View previous courses" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="426dp"
                app:srcCompat="@drawable/admin" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>