<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TraineeMenu">
    <TextView
        android:id="@+id/textView_fsafsa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trainee Menu"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/LoggedInAs_Trainee"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_logout_trainee"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="Log Out" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_apply_for_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply for Course" />

            <FrameLayout
                android:id="@+id/fragment_apply_for_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_search_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search for a Course" />

            <FrameLayout
                android:id="@+id/fragment_search_for_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_my_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My registered courses" />

            <FrameLayout
                android:id="@+id/fragment_my_courses"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit profile" />

            <FrameLayout
                android:id="@+id/fragment_view_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/trainee" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>